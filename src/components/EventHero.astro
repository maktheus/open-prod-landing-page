---
import { gsap } from 'gsap';
---

<section class="hero-section" id="home">
    <div class="hero-content">
        <h1 class="glitch-effect" data-text="OPEN PROD">OPEN PROD</h1>
        <p class="subtitle">INDUSTRIAL AMAZONIAN BASS & TECHNO EXPERIENCES</p>
        
        <div class="cta-container">
            <a href="#events" class="btn-primary">Explore Events</a>
            <a href="#about" class="btn-secondary">Join The Cult</a>
        </div>
    </div>
</section>

<style>
    .hero-section {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
        padding-top: 5rem;
    }

    .hero-content {
        z-index: 20;
        background: rgba(5, 5, 5, 0.6);
        padding: 4rem 2rem;
        border: 1px solid rgba(57, 255, 20, 0.1);
        border-radius: 8px;
        backdrop-filter: blur(5px);
        transform: translateY(0);
        opacity: 0; /* for gsap */
    }

    h1 {
        font-size: 5rem;
        margin-bottom: 1rem;
        color: var(--color-neon-magenta);
        text-shadow: 0 0 20px rgba(255, 0, 255, 0.5);
    }

    .subtitle {
        font-family: var(--font-industrial);
        font-size: 1.2rem;
        letter-spacing: 5px;
        color: var(--color-text-main);
        margin-bottom: 3rem;
        text-shadow: 2px 2px 4px #000;
    }

    .cta-container {
        display: flex;
        gap: 2rem;
        justify-content: center;
    }

    .btn-primary, .btn-secondary {
        padding: 1rem 3rem;
        font-family: var(--font-cyber);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background: var(--color-neon-green);
        color: var(--color-bg-dark);
        box-shadow: 0 0 20px rgba(57, 255, 20, 0.4);
    }

    .btn-primary:hover {
        background: transparent;
        color: var(--color-neon-green);
        border-color: var(--color-neon-green);
        box-shadow: 0 0 30px var(--color-neon-green);
    }

    .btn-secondary {
        background: transparent;
        color: var(--color-text-main);
        border-color: var(--color-industrial-gray);
    }

    .btn-secondary:hover {
        border-color: var(--color-neon-magenta);
        color: var(--color-neon-magenta);
        box-shadow: 0 0 20px rgba(255, 0, 255, 0.3);
    }

    @media (max-width: 768px) {
        h1 { font-size: 3.5rem; }
        .cta-container { flex-direction: column; gap: 1rem; }
    }
</style>

<script>
    import gsap from 'gsap';
    
    document.addEventListener("DOMContentLoaded", () => {
        gsap.to(".hero-content", {
            y: 0,
            opacity: 1,
            duration: 1.5,
            ease: "power3.out",
            delay: 0.5
        });
    });
</script>
