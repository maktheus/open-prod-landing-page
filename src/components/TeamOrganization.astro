---
// Generate 11 boilerplate members
const team = Array.from({ length: 11 }, (_, i) => ({
  id: i + 1,
  name: `OPERATIVE // ${i + 1}`,
  role: i === 0 ? "LEAD VISIONARY" : i < 3 ? "SYSTEM ARCHITECT" : "EXPERIENCE CURATOR",
  imgPlaceholder: `https://api.dicebear.com/7.x/bottts/svg?seed=OpenProd${i}&backgroundColor=transparent`
}));
---

<section class="team-section" id="about">
    <div class="container">
        
        <div class="manifesto-box">
            <h2 class="glitch-effect" data-text="THE CULT">THE CULT</h2>
            <h3 class="manifesto-title">MANIFESTO // 2026</h3>
            <div class="manifesto-text">
                <p>We are the pulse in the concrete. The neon bleeding into the Amazonian canopy.</p>
                <p>Open Prod is not just an event organizer; it is an industrial ritual. We merge the raw, unfiltered energy of underground bass and techno with the organic chaos of the jungle. Our experiences are designed to short-circuit your expectations and rewire your sensory reality.</p>
                <p>11 operatives. 1 vision. Total immersion.</p>
            </div>
        </div>

        <div class="team-grid">
            {team.map((member) => (
                <div class="team-card tilt-card">
                    <div class="image-wrapper">
                        <img src={member.imgPlaceholder} alt={member.name} />
                        <div class="overlay-glitch"></div>
                        <div class="scanline"></div>
                    </div>
                    <div class="member-info">
                        <h3>{member.name}</h3>
                        <p>{member.role}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .team-section {
        padding: 6rem 2rem;
        background: linear-gradient(180deg, transparent 0%, rgba(5,5,5,0.9) 30%, rgba(5,5,5,1) 100%);
        position: relative;
        z-index: 20;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 4rem;
    }

    /* Manifesto Styles */
    .manifesto-box {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
        padding: 3rem;
        border-left: 4px solid var(--color-neon-magenta);
        border-right: 4px solid var(--color-neon-green);
        background: rgba(20, 20, 20, 0.4);
        backdrop-filter: blur(5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .manifesto-box h2 {
        font-size: 4rem;
        margin-bottom: 0.5rem;
        color: var(--color-text-accent);
    }

    .manifesto-title {
        color: var(--color-neon-green);
        font-family: var(--font-industrial);
        letter-spacing: 5px;
        margin-bottom: 2rem;
        font-size: 1rem;
    }

    .manifesto-text p {
        font-family: var(--font-industrial);
        font-size: 1.1rem;
        line-height: 1.8;
        color: #b0b0b0;
        margin-bottom: 1.5rem;
    }
    .manifesto-text p:last-child { margin-bottom: 0; font-weight: bold; color: var(--color-neon-magenta);}

    /* Grid Styles */
    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 3rem;
        perspective: 1000px;
    }

    .team-card {
        background: #0a0a0a;
        border: 1px solid #333;
        transition: border-color 0.3s ease;
        position: relative;
        transform-style: preserve-3d;
        will-change: transform;
    }

    .team-card:hover {
        border-color: var(--color-neon-magenta);
        box-shadow: 0 0 30px rgba(255, 0, 255, 0.15);
        z-index: 10;
    }

    .image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 110%; 
        background: #111;
        overflow: hidden;
    }

    .image-wrapper img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%) contrast(150%) brightness(0.8);
        transition: filter 0.5s ease, transform 0.5s ease;
    }

    .team-card:hover img {
        filter: grayscale(0%) contrast(110%) brightness(1);
        transform: scale(1.05);
    }

    .overlay-glitch {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.3),
            rgba(0, 0, 0, 0.3) 2px,
            transparent 2px,
            transparent 4px
        );
        pointer-events: none;
        opacity: 0.8;
    }

    .scanline {
        width: 100%;
        height: 10px;
        background: rgba(57, 255, 20, 0.3);
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        box-shadow: 0 0 10px rgba(57, 255, 20, 0.5);
        pointer-events: none;
    }

    .team-card:hover .scanline {
        opacity: 1;
        animation: scanAnim 2s linear infinite;
    }

    @keyframes scanAnim {
        0% { top: -10%; }
        100% { top: 110%; }
    }

    .member-info {
        padding: 1.5rem 1rem;
        text-align: center;
        background: linear-gradient(0deg, #050505 0%, transparent 100%);
        transform: translateZ(30px); /* 3D pop on hover */
    }

    .member-info h3 {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: var(--color-text-main);
        text-shadow: 0 2px 4px #000;
        transition: color 0.3s;
    }

    .team-card:hover .member-info h3 {
        color: var(--color-neon-magenta);
    }

    .member-info p {
        font-family: var(--font-industrial);
        font-size: 0.85rem;
        color: var(--color-neon-green);
        letter-spacing: 2px;
    }
</style>

<script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        // Vanilla JS 3D Tilt Effect
        const cards = document.querySelectorAll('.tilt-card');
        
        cards.forEach((card: any) => {
            card.addEventListener('mousemove', (e: MouseEvent) => {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                
                const rotateX = ((y - centerY) / centerY) * -15; // Max 15 deg
                const rotateY = ((x - centerX) / centerX) * 15;
                
                card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.05, 1.05, 1.05)`;
            });

            card.addEventListener('mouseleave', () => {
                card.style.transform = `perspective(1000px) rotateX(0deg) rotateY(0deg) scale3d(1, 1, 1)`;
                card.style.transition = 'transform 0.5s ease';
            });

            card.addEventListener('mouseenter', () => {
                card.style.transition = 'none'; // Remove transition when entering to avoid lag
            });
        });

        // Intro GSAP Animation for Manifesto
        gsap.from('.manifesto-box', {
            scrollTrigger: {
                trigger: '.manifesto-box',
                start: 'top 80%',
            },
            y: 100,
            opacity: 0,
            duration: 1,
            ease: 'power3.out'
        });
    });
</script>
