---
// Generate 11 boilerplate members
const team = Array.from({ length: 11 }, (_, i) => ({
  id: i + 1,
  name: `OPERATIVE // ${i + 1}`,
  role: i === 0 ? "LEAD VISIONARY" : i < 3 ? "SYSTEM ARCHITECT" : "EXPERIENCE CURATOR",
  imgPlaceholder: `https://api.dicebear.com/7.x/bottts/svg?seed=OpenProd${i}&backgroundColor=transparent`
}));
---

<section class="team-section" id="about">
    <div class="container">
        <h2 class="glitch-effect" data-text="THE CULT (ORG LIST)">THE CULT (ORG LIST)</h2>
        <div class="team-grid">
            {team.map((member) => (
                <div class="team-card">
                    <div class="image-wrapper">
                        <img src={member.imgPlaceholder} alt={member.name} />
                        <div class="overlay-glitch"></div>
                    </div>
                    <div class="member-info">
                        <h3>{member.name}</h3>
                        <p>{member.role}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .team-section {
        padding: 6rem 2rem;
        background: linear-gradient(180deg, transparent 0%, rgba(5,5,5,0.9) 100%);
        position: relative;
        z-index: 20;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
    }

    h2 {
        font-size: 3rem;
        margin-bottom: 4rem;
        text-align: center;
        color: var(--color-neon-green);
    }

    .team-grid {
        display: grid;
        /* Make it dense and industrial looking */
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 2rem;
    }

    .team-card {
        background: #111;
        border: 1px solid #333;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }

    .team-card:hover {
        border-color: var(--color-neon-magenta);
        box-shadow: 0 0 20px rgba(255, 0, 255, 0.2);
    }

    .image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 100%; /* 1:1 Aspect Ratio */
        background: #1a1a1a;
        overflow: hidden;
    }

    .image-wrapper img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%) contrast(120%);
        transition: filter 0.5s ease;
    }

    .team-card:hover img {
        filter: grayscale(0%) contrast(100%);
    }

    .overlay-glitch {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.15),
            rgba(0, 0, 0, 0.15) 1px,
            transparent 1px,
            transparent 2px
        );
        pointer-events: none;
        opacity: 0.5;
    }

    .member-info {
        padding: 1.5rem 1rem;
        text-align: center;
    }

    .member-info h3 {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        color: var(--color-text-main);
    }

    .member-info p {
        font-family: var(--font-industrial);
        font-size: 0.8rem;
        color: var(--color-neon-green);
        letter-spacing: 1px;
    }
</style>
